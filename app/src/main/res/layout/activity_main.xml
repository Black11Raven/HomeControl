<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anime"
    tools:context="com.example.shantanu.homecontrol.MainActivity">

    <TextView
        android:layout_width="180sp"
        android:layout_height="27sp"
        android:text="      OFF-RESPONSE"
        android:background="@color/color1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/textView1"
        android:layout_alignTop="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />


    <TextView
        android:layout_width="180sp"
        android:layout_height="27sp"
        android:text="      OFF-RESPONSE"
        android:background="@color/color1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/switch2"
        android:layout_toEndOf="@+id/switch3" />


    <TextView
        android:layout_width="180sp"
        android:layout_height="27sp"
        android:text="      OFF-RESPONSE"
        android:background="@color/color1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/switch3"
        android:layout_toEndOf="@+id/switch4" />


    <TextView
        android:layout_width="180sp"
        android:layout_height="27sp"
        android:text="      OFF-RESPONSE"
        android:textSize="20sp"
        android:background="@color/color1"
        android:textColor="@android:color/black"
        android:id="@+id/textView4"
        android:layout_below="@+id/switch4"
        android:layout_toEndOf="@+id/switch5" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RELAY 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/color1"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/switch2"
        android:layout_alignStart="@+id/switch4" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RELAY 2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/color1"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/switch3"
        android:layout_alignStart="@+id/switch3" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RELAY 3"
        android:textSize="20sp"
        android:layout_marginBottom="34dp"
        android:textStyle="bold"
        android:background="@color/color1"
        android:layout_above="@+id/switch4"
        android:layout_alignStart="@+id/switch5" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/color1"
        android:text="RELAY 4"
        android:textSize="20sp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/switch5"
        android:layout_alignEnd="@+id/switch5" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED        "
        android:textStyle="bold"
        android:background="@color/color1"
        android:textSize="20sp"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="180sp"
        android:layout_height="27sp"
        android:background="@color/color1"
        android:text="      OFF-RESPONSE"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignTop="@+id/switch1"
        android:layout_toEndOf="@+id/switch1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:text="send"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/textView5"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:lines="3"
        android:textSize="20sp"
        android:hint="CUSTOM COMMAND"
        android:textColor="@android:color/black"
        android:background="@color/color1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/switch1"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/switch2"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/button"
        android:layout_marginTop="25dp"
        android:background="@color/color1"
        android:text="OVERALL COMMAND"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:hint="RESPONSE"
        android:background="@color/color1"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="22dp"
        android:layout_alignEnd="@+id/textView6" />


</RelativeLayout>
